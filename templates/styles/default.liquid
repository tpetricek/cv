<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
<style type="text/css">

  * { padding:0px; margin:0px; font-family:'Roboto', sans-serif; }
  body { background-color:#f0f0f0; }
  article { width:8.3in; background-color:white;
    margin:0.25in auto 0.25in auto; padding:0.5in; box-shadow: 0px 0px 10px #c0c0c0; }
  header { text-align:center; margin-bottom:24pt;}

  @media print {
    article { padding:0px; box-shadow: none ; }
  }

  /* hack to avoid page break after: https://stackoverflow.com/questions/9238868 */
  h2, h3 { break-inside:avoid; }
  h2::after, h3::after { content: ""; display: block; height: 100px; margin-bottom: -100px; }
  li { page-break-inside:avoid; break-inside:avoid; }

  h1 { font-weight:400; font-size:24pt; margin-bottom:2pt; }
  h2 { font-weight:400; font-size:20pt; margin-bottom:8pt; margin-top:16pt; }
  h3 { font-weight:400; font-size:14pt; margin-bottom:6pt; }

  li, p { font-weight:300; font-size:12pt; line-height:1.3em;}
  .spacious li, .spacious p { line-height:1.4em;}
  a, a:visited { color:#2E75B5; text-decoration:none; }
  li a { text-decoration:underline; }
  strong { font-weight:500; color:#2E75B5; }
  em { font-style:normal; color:#2E75B5; }

  ul li { list-style-type: square; }
  ol li { list-style-type: decimal; }

  section > p { margin-bottom:6pt; }
  ol, ul { margin-left:22px; margin-bottom:10pt; }

  li { margin-bottom:6pt; }
  li p { margin-bottom:2pt; }

  ul.condensed li { margin-bottom:3pt; }
  ul.condensed li p { margin-bottom:0pt; }

  ul.semicondensed li { margin-bottom:6pt; }
  ul.semicondensed li p { margin-bottom:0pt; }

  ul.spacious li p { line-height:1.4em; }
</style>
